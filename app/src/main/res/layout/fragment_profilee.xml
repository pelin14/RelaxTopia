<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileeFragment"
    android:background="@drawable/morumsu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <Chronometer
            android:id="@+id/kronometre"
            android:layout_width="352dp"
            android:layout_height="309dp"
            android:layout_gravity="center"
            android:background="@drawable/clock"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="34sp"></Chronometer>

        <Button
            android:id="@+id/basladur"
            android:layout_width="265dp"
            android:layout_height="127dp"
            android:layout_gravity="center"
            android:background="@drawable/lotuss"
            android:text="     BAŞLAT"
            android:textColor="@color/black"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/restart"
            android:layout_width="265dp"
            android:layout_height="127dp"
            android:layout_gravity="center"
            android:background="@drawable/lotuss"
            android:text="   YENİDEN BAŞLAT"
            android:textColor="@color/black"
            android:textSize="20dp"></Button>


    </LinearLayout>


</RelativeLayout>